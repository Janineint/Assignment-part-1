@model IEnumerable<Assignment_part_1.Models.Teacher>

<h1>Teacher List</h1>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Employee Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherFName</td>
                <td>@teacher.TeacherLName</td>
                <td>@teacher.HireDate.ToShortDateString()</td>
                <td>@teacher.Salary</td>
                <td>@teacher.EmployeeNumber</td>
                <td>
                    @string.Join(", ", teacher.CourseNames)
                </td>
                <td>
                    <a href="/TeacherPage/Show/@teacher.TeacherId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
